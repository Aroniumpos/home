$(function(){var i={question:"General Question",user:"Becoming a User",suggestions:"Feature Request",support:"Support Request"},r=location.search.split("option=")[1],t,n;r=="feature"&&$("#subject").val("suggestions");$("#contact-form").submit(function(n){n.preventDefault();$("#button-submit").attr("disabled",!0);$("#success-info").hide();$("#error-info").hide();var t={Subject:i[$("#subject").val()],Body:$("#message").val(),Name:$("#name").val(),Email:$("#email").val()};$.ajax({url:"https://api.aronium.com/api/v1/message",type:"post",dataType:"json",data:t,success:function(){$("#button-submit").attr("disabled",!1);$("#success-info").show();$("#contact-form").remove()},error:function(){$("#button-submit").attr("disabled",!1);$("#error-info").show()}})});t=function(){var i=$(this);i.on("click",n);i.off("mouseleave",t);i.find("iframe").css("pointer-events","none")};n=function(){var i=$(this);i.off("click",n);i.find("iframe").css("pointer-events","auto");i.on("mouseleave",t)};$(".map").on("click",n)})